  it should 'do multi flat replace' [
    [ 1 `foo 2 `bar 3 ] $: b
    b #`foo gsub: [ 'hello' 'world' ]
    b #`bar gsub: [ 'bye' #frob ]

    b [ 1 'hello' 'world' 2 'bye' frob 3 ] assert=

