    b #`foo gsub: [ 'hello' 'world' ]
    b [ 1 'hello' 'world' | 2 `bar 3 ] assert=

    b #`bar gsub: [ 'bye' #frob ]
    b [ 1 'hello' 'world' | 2 'bye' frob 3 ] assert=

