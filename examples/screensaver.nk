needsFeature: console

console:on
console:truecolor

0 console:setTimeout

[ 1 + ] $: goForth
[ 1 - ] $: goBack

0 $: n
goForth @: step

[
  console:peek
  console:hadKeyPressed? => break

  60 48 n lch
  withEchoBg
    console:clear
    console:present
  dropEchoBg

  n 0 =   => [ goForth =: step ]
  n 360 = => [ goBack =: step ]

  n step =: n

  33 nap
] loop

console:off
