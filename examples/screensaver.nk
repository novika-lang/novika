needsPackage: console

console:on 0 console:setTimeout
console:truecolor

[ 1 + ] $: goForth
[ 1 - ] $: goBack
[ console:setPrimary console:clear console:present ] @: erase

0 $: n
goForth @: step

[
  console:peek
  console:hadKeyPressed => [ break ]

  0 0 0 rgb 60 48 n lch erase

  n 0 =   => [ goForth =: step ]
  n 360 = => [ goBack =: step ]

  n step =: n

  33 nap
] loop

console:off
